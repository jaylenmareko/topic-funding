<?php
// creators/stripe_onboarding.php - Simplified version with removed sections
session_start();
require_once '../config/database.php';
require_once '../config/stripe_connect.php';
require_once '../config/navigation.php';

// Check if user is logged in
if (!isset($_SESSION['user_id'])) {
    header('Location: ../auth/login.php');
    exit;
}

$creator_id = isset($_GET['creator_id']) ? (int)$_GET['creator_id'] : 0;
$db = new Database();
$stripeConnect = new StripeConnectManager();

// Get creator info and verify ownership
$db->query('
    SELECT c.*, u.email 
    FROM creators c 
    LEFT JOIN users u ON c.applicant_user_id = u.id 
    WHERE c.id = :creator_id AND c.applicant_user_id = :user_id AND c.is_active = 1
');
$db->bind(':creator_id', $creator_id);
$db->bind(':user_id', $_SESSION['user_id']);
$creator = $db->single();

if (!$creator) {
    header('Location: ../index.php');
    exit;
}

$errors = [];
$success = '';

// Handle Stripe account creation or onboarding
if ($_POST && isset($_POST['start_onboarding'])) {
    // Check if creator already has Stripe account
    if (!$creator->stripe_account_id) {
        // Create new Stripe Connect account
        $account_result = $stripeConnect->createConnectAccount(
            $creator_id, 
            $creator->email, 
            $creator->display_name
        );
        
        if (!$account_result['success']) {
            $errors[] = $account_result['error'];
        } else {
            // Refresh creator data
            $db->query('SELECT * FROM creators WHERE id = :creator_id');
            $db->bind(':creator_id', $creator_id);
            $creator = $db->single();
        }
    }
    
    // Create onboarding link
    if (empty($errors) && $creator->stripe_account_id) {
        $onboarding_result = $stripeConnect->createOnboardingLink($creator_id);
        
        if ($onboarding_result['success']) {
            // Redirect to Stripe onboarding
            header('Location: ' . $onboarding_result['onboarding_url']);
            exit;
        } else {
            $errors[] = $onboarding_result['error'];
        }
    }
}

// Check current onboarding status
$account_ready = $stripeConnect->isAccountReady($creator_id);
$has_stripe_account = !empty($creator->stripe_account_id);

// Get pending topics count
$db->query('
    SELECT COUNT(*) as count 
    FROM topics 
    WHERE creator_id = :creator_id AND status = "funded"
');
$db->bind(':creator_id', $creator_id);
$pending_topics = $db->single()->count;
?>
