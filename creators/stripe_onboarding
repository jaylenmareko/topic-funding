<?php
// creators/stripe_onboarding.php - Fixed version without redirect loops
session_start();
require_once '../config/database.php';
require_once '../config/navigation.php';

// Check if user is logged in
if (!isset($_SESSION['user_id'])) {
    header('Location: ../auth/login.php');
    exit;
}

$creator_id = isset($_GET['creator_id']) ? (int)$_GET['creator_id'] : 0;
$db = new Database();

// If no creator_id provided, find it from session
if (!$creator_id) {
    $db->query('SELECT id FROM creators WHERE applicant_user_id = :user_id AND is_active = 1');
    $db->bind(':user_id', $_SESSION['user_id']);
    $creator_check = $db->single();
    if ($creator_check) {
        $creator_id = $creator_check->id;
    }
}

// Get creator info and verify ownership
$db->query('
    SELECT c.*, u.email 
    FROM creators c 
    LEFT JOIN users u ON c.applicant_user_id = u.id 
    WHERE c.id = :creator_id AND c.applicant_user_id = :user_id AND c.is_active = 1
');
$db->bind(':creator_id', $creator_id);
$db->bind(':user_id', $_SESSION['user_id']);
$creator = $db->single();

if (!$creator) {
    header('Location: ../dashboard/index.php');
    exit;
}

$errors = [];
$success = '';

// Simple status check without external API calls to prevent redirect loops
$stripe_connected = !empty($creator->stripe_account_id);
$stripe_ready = ($creator->stripe_payouts_enabled == 1);

// Handle Stripe account creation or onboarding
if ($_POST && isset($_POST['start_onboarding']) && empty($errors)) {
    try {
        // Check if creator already has Stripe account
        if (!$creator->stripe_account_id) {
            // Create new Stripe Connect account
            $account_result = $stripeConnect->createConnectAccount(
                $creator_id, 
                $creator->email, 
                $creator->display_name
            );
            
            if (!$account_result['success']) {
                $errors[] = "Failed to create Stripe account: " . $account_result['error'];
            } else {
                // Refresh creator data
                $db->query('SELECT * FROM creators WHERE id = :creator_id');
                $db->bind(':creator_id', $creator_id);
                $creator = $db->single();
                $stripe_account_created = true;
            }
        }
        
        // Create onboarding link if no errors
        if (empty($errors) && $creator->stripe_account_id) {
            $onboarding_result = $stripeConnect->createOnboardingLink($creator_id);
            
            if ($onboarding_result['success']) {
                $onboarding_url = $onboarding_result['onboarding_url'];
                // Don't redirect immediately, show the link to user
            } else {
                $errors[] = "Failed to create onboarding link: " . $onboarding_result['error'];
            }
        }
        
    } catch (Exception $e) {
        $errors[] = "An error occurred while setting up Stripe. Please try again.";
        error_log("Stripe onboarding error: " . $e->getMessage());
    }
}

// Check current status without external API calls to prevent redirects
$account_ready = $stripe_ready;

// Get pending topics count
$db->query('
    SELECT COUNT(*) as count 
    FROM topics 
    WHERE creator_id = :creator_id AND status = "funded"
');
$db->bind(':creator_id', $creator_id);
$pending_topics = $db->single()->count;
?>
