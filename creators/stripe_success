        .success-title { font-size: 28px; font-weight: bold; color: #333; margin-bottom: 15px; }
        .success-message { color: #666; margin-bottom: 30px; line-height: 1.6; font-size: 16px; }
        .btn { background: #28a745; color: white; padding: 15px 25px; text-decoration: none; border-radius: 6px; display: inline-block; margin: 10px; font-weight: bold; transition: background 0.3s; }
        .btn:hover { background: #218838; color: white; text-decoration: none; }
        .btn-primary { background: #667eea; }
        .btn-primary:hover { background: #5a6fd8; }
        .btn-warning { background: #ffc107; color: #212529; }
        .btn-warning:hover { background: #e0a800; color: #212529; text-decoration: none; }
        .status-pending { background: #fff3cd; border: 2px solid #ffc107; color: #856404; padding: 20px; border-radius: 8px; margin: 20px 0; }
        .status-complete { background: #d4edda; border: 2px solid #28a745; color: #155724; padding: 20px; border-radius: 8px; margin: 20px 0; }
        .next-steps { background: #f8f9fa; padding: 20px; border-radius: 8px; margin: 20px 0; text-align: left; }
        .next-steps h4 { margin-top: 0; color: #1976d2; }
    </style>
</head>
<body>
    <div class="container">
        <div class="success-card">
            <?php if ($account_ready): ?>
                <div class="success-icon">üéâ</div>
                <h1 class="success-title">Payment Setup Complete!</h1>
