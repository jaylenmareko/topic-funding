            </div>
        </div>
    </div>

    <script>
    // Auto-refresh if account is not ready yet
    <?php if (!$account_ready): ?>
    setTimeout(function() {
        window.location.reload();
    }, 30000); // Refresh every 30 seconds
    <?php endif; ?>
    
    // Celebration effect for completed setup
    <?php if ($account_ready): ?>
    document.addEventListener('DOMContentLoaded', function() {
        // Add some celebration effects
        setTimeout(function() {
            if (<?php echo $pending_topics; ?> > 0) {
                if (confirm('üéâ Payment setup complete! You have <?php echo $pending_topics; ?> funded topics waiting. Go complete them now?')) {
                    window.location.href = 'dashboard.php#funded-topics';
                }
            }
        }, 2000);
    });
    <?php endif; ?>
    </script>
