# .htaccess
RewriteEngine On

# Vanity URL handler - redirect username to username.php (without @)
# Must be more specific to avoid catching root domain
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/(index\.php|auth/|creators/|topics/|admin/|uploads/|config/)
RewriteRule ^([a-zA-Z0-9_.-]+)$ username.php?username=$1 [L,QSA]

# If you have other RewriteRules, add them below
